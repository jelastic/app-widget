{
  "path": {
    "base": {
      "src":"assets/",
      "dest": "./dist/",
      "desthtml": "./dist/**/*.{html,htm,php}"
    },
    "images": {
      "src": "assets/img/",
      "srcimg": "assets/img/**/*.{png,jpg,jpeg,gif,svg}",
      "dest": "./dist/img/"
    },
    "styles": {
      "src": "assets/scss/",
      "srcfiles": "assets/scss/**/*.scss",
      "css": "assets/css/",
      "dest": "./dist/css/"
    },
    "scripts": {
      "src": "assets/js/",
      "srcfiles": "assets/js/**/*.js",
      "dest": "./dist/"
    }
  }
}
